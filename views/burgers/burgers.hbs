{{#extends "base"}}


{{#block "content"}}
<h1>All Burgers</h1>

<table class="table">
    <thead>
        <th>
             ID
        </th>
        <th>
            Name
        </th>
        <th>
            Cost
        </th>
        <th>
            Description
        </th>
        <th>Availability</th>
    </thead>
    {{#each burgers}}
    <tr>
        <td>
            {{this.id}}
        </td>
        <td>
            {{this.item_name}}
        </td>
        <td>
            {{this.cost}}
        </td>
        <td>
            {{this.description}}
        </td>
        <td>
            {{this.availability}}
        </td>
    </tr>
    {{/each}}
</table>

{{/block}}

{{/extends}}